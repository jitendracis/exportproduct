<config>
    <modules>
        <Cis_Supplier>
            <version>0.1.0</version>
        </Cis_Supplier>
    </modules>
    <frontend>
	<routers>
            <supplier>
                <use>standard</use>
                <args>
                    <module>Cis_Supplier</module>
                    <frontName>supplier</frontName>
                </args>
            </supplier>
        </routers>
	<layout>
	    <updates>
		    <supplier>
			<file>supplier.xml</file>
		    </supplier>
	    </updates>
	</layout>
    </frontend>
    <admin>
        <routers>
	    <supplier>
		<use>admin</use>
		<args>
		    <module>Cis_Supplier</module>
		    <frontName>supplier</frontName>
		</args>
	    </supplier>
        </routers>
    </admin>
    <adminhtml>
	<menu>
	    <supplier module="supplier">
		<title>Supplier URL's</title>
		<sort_order>71</sort_order>               
		<children>
		    <items module="supplier">
			<title>Supplier URL's Grid</title>
			<sort_order>0</sort_order>
			<action>supplier/adminhtml_index</action>
		    </items>
		</children>
	    </supplier>
	</menu>
	<acl>
	    <resources>
		<all>
		    <title>Allow Everything</title>
		</all>
		<admin>
		    <children>
			<system>
			    <children>
				<config>
				    <children>
					<supplier>
					    <title>Cis - All</title>
					</supplier>
				    </children>
				</config>
			    </children>
			</system>
		    </children>
		</admin>
	    </resources>
	</acl>
	<layout>
	    <updates>
		    <supplier>
			<file>supplier.xml</file>
		    </supplier>
	    </updates>
	</layout>
    </adminhtml>
    <global>
        <helpers>
            <supplier>
                <class>Cis_Supplier_Helper</class>
            </supplier>
        </helpers>
	<blocks>
            <supplier>
                <class>Cis_Supplier_Block</class>
            </supplier>
        </blocks>
	<models>
            <supplier>
                <class>Cis_Supplier_Model</class>
                <resourceModel>supplier_mysql4</resourceModel>
            </supplier>
	    <supplierlist>
                <class>Cis_Supplier_Model</class>
            </supplierlist>
            <supplier_mysql4>
                <class>Cis_Supplier_Model_Mysql4</class>
                <entities>
                    <supplier>
                        <table>supplier</table>
                    </supplier>
                </entities>
            </supplier_mysql4>
        </models>
        <resources>
            <supplier_setup>
                <setup>
                    <module>Cis_Supplier</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </supplier_setup>
            <supplier_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </supplier_write>
            <supplier_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </supplier_read>
        </resources>
    </global>
    <default>
	<supplier>
	    <supplier_group>
		<enable>1</enable>
	    </supplier_group>
	</supplier>
    </default>
</config>