<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <cis_supplier translate="label" module="supplier">
            <label>Supplier Extension</label>
            <sort_order>500</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
        </cis_supplier>
    </tabs>
    <sections>
        <supplier translate="label" module="supplier">
            <label>Supplier URL Setting</label>
            <tab>cis_supplier</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <supplier_group translate="label" module="supplier">
                    <label>Supplier URL Setting</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable Supplier URL's</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>                          
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enable>
                        <attribute_value translate="label">
                            <label>Select Attribute</label>
                            <frontend_type>select</frontend_type>
                            <source_model>supplier/system_config_source_attributelist</source_model>                          
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </attribute_value>
                    </fields>
                </supplier_group>
            </groups>
        </supplier>
    </sections>
</config>